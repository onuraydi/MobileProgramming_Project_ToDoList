<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_gray">

    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_header_rounded"
        android:paddingTop="48dp"
        android:paddingBottom="32dp"
        android:paddingHorizontal="24dp"
        android:elevation="8dp"
        android:outlineProvider="background">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Görevlerim"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:letterSpacing="-0.02"/> <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gününüz harika geçsin!"
        android:textSize="15sp"
        android:textColor="@color/text_secondary"
        android:layout_marginTop="4dp"/>
    </LinearLayout>

    <ListView
        android:id="@+id/listViewGorevler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/headerLayout"

        android:divider="@android:color/transparent"
        android:dividerHeight="8dp"

        android:paddingTop="16dp"
        android:paddingBottom="100dp"
        android:clipToPadding="false"
        android:scrollbars="none"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabEkle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="24dp"
        android:src="@android:drawable/ic_input_add"
        app:backgroundTint="@color/primary_blue"
        app:tint="@color/white"
        app:elevation="8dp"
        android:contentDescription="Ekle" />

</RelativeLayout>